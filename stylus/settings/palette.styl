    --primaryColor var(--primaryMain)
    --primaryColorDark var(--primaryDark)
    --primaryColorLight var(--primaryLight)
    --primaryColorLightest var(--primaryLightest)

    --secondaryColor var(--secondaryMain)
    --secondaryColorDark var(--secondaryDark)
    --secondaryColorLight var(--secondaryLight)
    --secondaryColorLightest var(--secondaryLightest)

    --primaryBackgroundLight var(--backgroundPrimaryLight)
    --defaultBackgroundColor var(--backgroundDefault)
    --paperBackgroundColor var(--backgroundPaper)

    --primaryTextColor var(--textPrimary)
    --secondaryTextColor var(--textSecondary)
    --primaryContrastTextColor var(--primaryContrastText)
    --secondaryContrastTextColor var(--secondaryContrastText)

    --dividerColor var(--divider)

    --successColor var(--successMain)
    --warningColor var(--warningMain)
    --errorColor var(--errorMain)
    --errorColorDark var(--errorDark)
    --errorColorLight var(--errorLight)
    --errorColorLightest var(--errorLightest)
    --infoColor var(--infoMain)

