@require 'settings/breakpoints'


&.Figure-currency
    color var(--textSecondary)

&.Figure-content--positive
    color var(--successMain)

    .Figure-currency
        color var(--successMain)

&.Figure-content--negative
    color var(--errorMain)

    .Figure-currency
        color var(--errorMain)

&.Figure-content--warning
    color var(--warningMain)

    .Figure-currency
        color var(--warningMain)

.Figure-total
    font-weight    900

.Figure__currency--withSpacing
    margin-left .2em

.Figure--big
    font-size 2rem
    line-height 2.625rem

+small-screen()
    .Figure--big
        font-size 1.5rem
        line-height 1.75rem

.Figure--clickable
    cursor pointer

.Figure_blur
    filter blur(8px)

.Figure--inline
    display inline
